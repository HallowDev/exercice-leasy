<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
        <script type="text/javascript" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
    </head>
    <body>
        {% if app.user is not empty %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="#">Navbar</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_home') }}">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_user_new') }}">Create Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_chat_index') }}">Chat</a>
              </li>
            </ul>
          </div>
        </nav>
        {% endif %}
        {% block body %}{% endblock %}
        </body>
</html>
